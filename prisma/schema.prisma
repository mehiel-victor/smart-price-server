generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id       Int             @id @default(autoincrement())
  title    String
  minPrice Float?
  medPrice Float?
  maxPrice Float?
  prices   Price[]
  products ProductDetail[]

  @@map("product")
}

model Price {
  id        Int      @id @default(autoincrement())
  value     Float
  productId Int
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])

  @@map("price")
}

model ProductDetail {
  id               Int     @id @default(autoincrement())
  productId        Int
  image_url        String
  price            Float
  rating           Float
  scraped_from_url String
  seller           String
  seller_url       String
  title            String
  product          Product @relation(fields: [productId], references: [id])

  @@map("productdetail")
}
